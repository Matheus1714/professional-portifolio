---
import '../styles/index.css';
import BaseLayout from './BaseLayout.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
	<div class="h-full min-h-screen flex flex-col overflow-x-hidden bg-default text-default text-base selection:bg-secondary">
		<section class="flex-grow">
			<slot />
		</section>
	</div>
</BaseLayout>
