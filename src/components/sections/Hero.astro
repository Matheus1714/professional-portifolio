---
import { Image } from 'astro:assets';
import heroImage from '@/assets/matheus_mota.jpg';
import { basic } from '@/config/cv.json';
---

<section class="py-5 px-4 sm:py-10 lg:py-16">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
            <div class="relative flex justify-center">
                <div class="absolute w-full bg-secondary h-full rotate-3 rounded-2xl shadow-2xl"/>
                <div class="absolute w-full bg-primary h-full rotate-6 rounded-2xl shadow-2xl"/>
                <Image class="relative w-full md:max-w-md lg:max-w-md rounded-2xl space-x-6"
                    src={heroImage}
                    alt=`Resume ${basic.name}` />
            </div>
            <div>
                <p class="text-lg text-offset">
                    {basic?.job}
                </p>

                <h1 class="text-2xl font-bold sm:text-4xl lg:text-5xl mt-3">
                    {basic?.name}
                </h1>

                <ul class="flex flex-wrap gap-2 mt-4">
                    {basic.skills.map((skill) => (
                        <li id={skill.id} class="px-2 bg-primary rounded-full text-white">{ skill.name }</li>
                    ))}
                </ul>

                <p class="mt-5 text-base sm:text-xl">
                    {basic?.summary}
                </p>

                <div class="mt-10 sm:flex sm:items-center sm:space-x-8">
                    <a href=`/cv/${basic?.cv_file_name}` title="Download CV" download
                        class="inline-flex items-center justify-center px-10 py-4 text-base text-white
                            font-semibold transition-all duration-200 rounded
                            bg-primary hover:bg-secondary focus:bg-secondary" role="button">
                        Download CV
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
