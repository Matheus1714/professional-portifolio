---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/sections/Hero.astro';
import Resume from '@/components/sections/Resume.astro';
import Portfolio from '@/components/sections/Portfolio.astro';
import Contact from '@/components/sections/Contact.astro';
import AnimateAppear from '@/components/AnimateAppear.astro';

import { basic, projects } from '@/config/cv.json';
---

<Layout title={basic.name}>
	<AnimateAppear>
		<Hero />
	</AnimateAppear>
	<AnimateAppear>
		<Resume />
	</AnimateAppear>
	<AnimateAppear>
		<Portfolio projects={projects} />
	</AnimateAppear>
	<AnimateAppear>
		<Contact />
	</AnimateAppear>
</Layout>
