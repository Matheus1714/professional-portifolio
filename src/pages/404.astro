---
import Layout from "@/layouts/Layout.astro";

import {
	defaultLang,
	languages,
	useTranslations,
} from "@/hooks/use-translations";
import StatusHttpError from "@/components/StatusHttpError.astro";

export function getStaticPaths() {
	return languages.map((lang) => ({ params: { lang } }));
}

const { lang = defaultLang } = Astro.params;
const t = useTranslations(lang);
---

<Layout
	title={t("error.http.404.title")}
	description={t("error.http.404.description")}
	image="/profile.jpeg"
>
	<StatusHttpError
		code={404}
		title={t("error.http.404.title")}
		description={t("error.http.404.description")}
	/>
</Layout>
