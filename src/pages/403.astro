---
import Layout from "@/layouts/Layout.astro";

import { languages, useTranslations } from "@/hooks/use-translations";
import StatusHttpError from "@/components/StatusHttpError.astro";

export function getStaticPaths() {
	return languages.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout
	title={t("error.http.403.title")}
	description={t("error.http.403.description")}
	image="/profile.jpeg"
>
	<StatusHttpError
		code={403}
		title={t("error.http.403.title")}
		description={t("error.http.403.description")}
	/>
</Layout>
