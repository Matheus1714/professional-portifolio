---
import Layout from "@/layouts/Layout.astro";
import { UrlPretty } from "@/components/tools/UrlPretty";
---

<Layout
  title="URL Pretty"
  description="A simple way to extract parameters from the url and present them in a beautiful way"
  image="/profile.jpeg"
>
  <section class="bg-background">
    <div class="container px-6 py-8 mx-auto">
      <h1 class="text-3xl font-semibold text-center capitalize lg:text-4xl">
        URL Pretty
      </h1>

      <p class="mt-4 text-center text-gray-600 lg:text-lg">
        A simple way to extract parameters from the url and present them in a
        beautiful way
      </p>

      <div class="my-8 lg:mx-40">
        <UrlPretty client:load />
      </div>
    </div>
  </section>
</Layout>
