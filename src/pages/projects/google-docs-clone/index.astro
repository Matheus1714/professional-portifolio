const percentage = Math.floor(about.steps.reduce((count, step) => {
    if(step.completed) {
        count++;
    }
    return count;
}, 0) / about.steps.length);

---

<Layout title='Google Docs Clone'>
    <section class="py-5 px-4 sm:py-10 lg:py-16">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
                <div class="relative flex justify-center group">
                    <img
                        class="relative w-full md:max-w-md lg:max-w-md rounded-2xl space-x-6"
                        src={about.imageUrl}
                        alt={about.title}
                    />
                </div>
                
                <div>
                    <h1 class="text-2xl font-bold sm:text-4xl lg:text-5xl mt-3 relative">
                        {about.title}
                    </h1>
    
                    <ul class="flex flex-wrap gap-2 mt-4">
                        {about.technologies.map((tech) => (
                            <li id={tech.id} class="px-2 bg-primary rounded-full text-white">{ tech.name }</li>
                        ))}
                    </ul>
    
                    <p class="mt-5 text-base sm:text-xl">
                        {about.description}
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>
