        { title: "Export (PDF, HTML, TXT, JSON)" },
        { title: "User Profiles" },
        { title: "Organization Workspaces" },
        { title: "Organization Invites" },
        { title: "Authentication" },
        { title: "Responsive Design" },
        { title: "Cursor Tracking" },
        { title: "Text Formatting Tools" },
